@model MovieStore.Core.Entities.Review

<div class="modal-content">
    <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Review</h4>
        <button type="button" class="closemodal">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div class="modal-body">
        <form asp-action="Review" method="post">
            <input asp-for="MovieId" type="hidden" value="@Model.MovieId" />
            <div class="row">
                <div class="col-sm-2">
                    Comment:
                </div>
                <div class="col-sm-10">
                    <textarea  asp-for="ReviewText" value="@Model.ReviewText"  rows="4" cols="50"/>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    1/10 Rating (1 is bad, 10 is good):
                </div>
                <div class="col-sm-10">
                    <select id="example-1to10" name="rating" autocomplete="off" value="@Model.Rating">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10">10</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary closemodal">Save</button>
                </div>
                <div class="col-sm-10">
                    <button type="button" class="btn btn-primary closemodal">Close</button>
                </div>
            </div>
</form>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $(".closemodal").on("click", function () {
            $(".popup-content").removeClass("active");
        });
    });
</script>